<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExactlyLegal</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Belanosima:wght@600&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoginRegisterApp.styles.css" asp-append-version="true" />
</head>
<body>
   <header>

        <nav id="main-nav">

            <ul id="main-nav-list">
                <li class="nav-list-item"><a class="nav-list-link" href="">Home</a></li>
                <li class="nav-list-item"><a class="nav-list-link" href="./scripts.html">Scripts</a></li>
                <li class="nav-list-item"><a class="nav-list-link" href="./tools.html">Tools</a></li>
                <li class="nav-list-item"><a class="nav-list-link" href="">S.S.S</a></li>
                <li class="nav-list-item"><a class="nav-list-link" href="">About</a></li>
            </ul>

            <div id="member-area">
                <ul id="member-area-list">
                    @if (User.Identity.IsAuthenticated)
                        {
                            <li class="text-info text-md-center">
                                @User.Identity.Name
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Logout" asp-controller="Account">Logout</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Profile" asp-controller="Account">Profile</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item member-list-item">
                                <a class="nav-link text-dark  member-list-link" asp-area="" asp-action="Register" asp-controller="Account">Register</a>
                            </li>
                            <li class="nav-item member-list-item">
                                <a class="nav-link text-dark member-list-link" asp-area="" asp-action="Login" asp-controller="Account">Login</a>
                            </li>
                        }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-center text-white">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->

            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->

        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2023 Copyright:
            <a class="text-white" href="https://exactlylegal.io/">exactlylegal.io</a>
        </div>
        <!-- Copyright -->
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
